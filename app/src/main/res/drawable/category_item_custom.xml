<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#2fb7f6" />
            <gradient android:angle="90" android:startColor="#2fb7f6" android:endColor="#2fb7f6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#2fb7f6" />
            <solid android:color="#2fb7f6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#279AD0" />
            <gradient android:angle="90" android:startColor="#279AD0" android:endColor="#279AD0" />
        </shape>
    </item>
</selector>