<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dip" />
            <stroke android:width="1dip" android:color="#279ad0" />
            <gradient android:angle="-90" android:startColor="#279ad0" android:endColor="#279ad0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="200dip" />
            <stroke android:width="1dip" android:color="#279ad0" />
            <solid android:color="#279ad0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dip" />
            <stroke android:width="1dip" android:color="#3875d6" />
            <gradient android:angle="-90" android:startColor="#3875d6" android:endColor="#3875d6" />
        </shape>
    </item>
</selector>